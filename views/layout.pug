html
    head
      block head
        script(src="/javascripts/userAuth.js")
        link(rel="stylesheet", href="/stylesheets/navbar.css")
        title Navbar
body
    div.navbar__container
        p.nav__logo Good<span id="logo-span">Trails</span>
        form(action="/")
            button(type="submit").home Home
        form(action="/my-trails")
            button(type="submit").trails My Trails
        form(action="/trails/4")
            button(type="submit").browse Explore
        form(action="#")
            button(type="submit").community Community
        //- a.home(href="/") Home
        //- a.trails(href="/my-trails") My Trails
        //- a.browse(href="/trails/4") Trail 4
        //- a.community  Community
        input(type="text" name="search" placeholder="Search Trails").search__bar
        img(src="/nav-images/NavbarBell.png", alt="Notifications").bell
        img(src="/nav-images/NavbarMsg.png", alt="Messages").msg
        img(src="/nav-images/NavBarMail.png", alt="Mail").mail
        img(src="/nav-images/NavbarFriends.png", alt="Friends").friends
        //- form(action="")
        button(type="submit").logout Log out
        .modalDiv
            .modal-info
                form(action='/users/login' method='post')
                  h1 Log in
                  input(type='hidden' name ='_csrf' value=csrfToken)
                  input(name='email' type='email' placeholder="Email" required)
                  input(name='password' placeholder="Password" type='password' required)
                  button(type='submit').subamit Login
                  button.return Return
        .secondModal
          .modal-content
            form(action='/users/register' method='post')
              h1 Register
              input(type='hidden' name ='_csrf' value=csrfToken)
              input(name='username' placeholder="Username" type='text')
              input(name='email' placeholder="Email" type='email' required)
              input(name='password' placeholder="Password" type='password', required )
              input(name='confirmPassword' placeholder="Confirm Password" type='password' required )
              button(type='submit') Register
              button(href='#' ).return2 Return
        button(type="submit").login Log in
        button(type="submit").signup Sign up


    block content

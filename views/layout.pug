doctype html
html
  head
    block head
      title="Express Starter App"
      link(rel='stylesheet' href='/stylesheets/reset.css')
      link(rel="stylesheet" href="/stylesheets/navbar.css")
  body
    div.navbar__container
      p.nav__logo Good<span id="logo-span">Trails</span>
      a.home(href="/") Home
      a.trails(href="/my-trails") My Trails
      a.browse(href="/trails/4") Trail 4

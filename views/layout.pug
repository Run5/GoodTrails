doctype html
html
  head
    block head
      title="Good Trails"
      link(rel='stylesheet' href='/stylesheets/reset.css')
      link(rel="stylesheet" href="/stylesheets/navbar.css")
  body
    div.navbar__container
      p.nav__logo Good<span id="logo-span">Trails</span>
      form(action="/" method="get")
        button.home Home
      form(action="/my-trails" method="get")
        button.trails My Trails
      form(action="/trails/:id" method="get")
        button.browse Discover
      form(action="#" method="get")
        button.community Community
      input(type="text" name="search" placeholder="Search Trails").search__bar
      img(src="/nav-images/NavbarBell.png", alt="Notifications").bell
      img(src="/nav-images/NavbarMsg.png", alt="Messages").msg
      img(src="/nav-images/NavBarMail.png", alt="Mail").mail
      img(src="/nav-images/NavbarFriends.png", alt="Friends").friends

    block content

extends layout.pug

block content
    //- include error.pug
    form(action='/users/login' method='post')
        input(type='hidden' name ='_csrf' value=csrfToken)
        label Email
        input(name='email' type='email' value=user.email required)
        label Password
        input(name='password' type='password' required)
        button(type='submit') Login
        a(href='/' ) Cancel
